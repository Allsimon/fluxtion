<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>root-parent-pom</artifactId>
    <groupId>com.fluxtion</groupId>
    <version>1.6.3-SNAPSHOT</version>
    <relativePath>../../poms/parent-root/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.fluxtion.example</groupId>
  <artifactId>documentation_futext_examples</artifactId>
  <name>fluxtion :: examples :: futtext</name>
  <description>Examples to accompany gitbook reference documentation for futext extenstion</description>
  <build>
    <plugins>
      <plugin>
        <groupId>com.fluxtion</groupId>
        <artifactId>fluxtion-maven-plugin</artifactId>
        <version>1.6.3-SNAPSHOT</version>
        <executions>
          <execution>
            <goals>
              <goal>scan</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>fatjar-build</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>3.2.1</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <transformers>
                    <transformer>
                      <mainClass>com.fluxtion.ext.futext.example.flightdelay.Main</mainClass>
                    </transformer>
                  </transformers>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>com.fluxtion.extension</groupId>
      <artifactId>fluxtion-fu-text-builder</artifactId>
      <version>1.6.3-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>fluxtion-builder</artifactId>
          <groupId>com.fluxtion</groupId>
        </exclusion>
        <exclusion>
          <artifactId>fluxtion-declarative-builder</artifactId>
          <groupId>com.fluxtion.extension</groupId>
        </exclusion>
        <exclusion>
          <artifactId>generator</artifactId>
          <groupId>com.fluxtion</groupId>
        </exclusion>
        <exclusion>
          <artifactId>classgraph</artifactId>
          <groupId>io.github.classgraph</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-core</artifactId>
      <version>1.3</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-all</artifactId>
      <version>1.3</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.github.stefanbirkner</groupId>
      <artifactId>system-rules</artifactId>
      <version>1.16.0</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <properties>
    <netbeans.hint.license>gpl30</netbeans.hint.license>
    <maven.compiler.source>1.8</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.deploy.skip>true</maven.deploy.skip>
  </properties>
</project>
